<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".homePage">


    <ImageView
        android:id="@+id/imagelogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logo"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-7dp" />

    <ImageView
        android:id="@+id/cutedog"
        android:layout_width="377dp"
        android:layout_height="344dp"
        android:layout_marginTop="516dp"
        android:src="@drawable/dogiff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.449" />


    <Button
        android:id="@+id/btnStart"
        android:layout_width="130dp"
        android:layout_height="67dp"
        android:text="התחל"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.197"
        app:layout_constraintStart_toEndOf="@+id/btnRecorder"
        app:layout_constraintTop_toTopOf="@+id/imagelogo"
        app:layout_constraintVertical_bias="0.668" />

    <Button
        android:id="@+id/btnSettings"
        android:layout_width="130dp"
        android:layout_height="67dp"
        android:text="הגדרות"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@id/cutedog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.197"
        app:layout_constraintStart_toEndOf="@+id/btnBluetooth"
        app:layout_constraintTop_toTopOf="@id/btnStart"
        app:layout_constraintVertical_bias="0.26" />

    <Button
        android:id="@+id/btnBluetooth"
        android:layout_width="130dp"
        android:layout_height="67dp"
        android:text="בלוטוס"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@id/cutedog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.249"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnStart"
        app:layout_constraintVertical_bias="0.26" />

    <Button
        android:id="@+id/btnRecorder"
        android:layout_width="130dp"
        android:layout_height="67dp"
        android:text="להקלטה"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@id/cutedog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.249"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnStart"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>