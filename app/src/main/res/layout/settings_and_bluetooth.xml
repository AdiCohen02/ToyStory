<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".arduino2Bluetooth.SettingsAndBluetooth">

    <Button
        android:id="@+id/startBtn2"
        android:layout_width="110dp"
        android:layout_height="54dp"
        android:text="התחל"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.045" />

    <TextView
        android:id="@+id/toy_exist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="משחקים עם הבובה?"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/switchToyBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.229" />

    <Switch
        android:id="@+id/switchToyBtn"
        android:layout_width="72dp"
        android:layout_height="71dp"
        android:layout_marginStart="44dp"
        android:padding="6dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:switchMinWidth="40dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toy_exist"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp">

        <TextView
            android:id="@+id/bluetooth_state"
            android:layout_width="343dp"
            android:layout_height="72dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="BBBB"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/bluetooth_paired"
            android:layout_width="343dp"
            android:layout_height="42dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="AAAA"
            android:textSize="30sp" />

        <ListView
            android:id="@+id/mylist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/purple_700"
            android:textSize="5sp"></ListView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/checkToy"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/buttonlightup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LIGHT UP"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonShut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TURN OFF"
            android:textSize="30sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="122dp"
        android:gravity="center_horizontal"
        android:text="AVAILABLE DEVICES"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="@+id/toy_exist"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/checkToy"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginTop="60dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:text="לחץ לבדיקת החיבור לבובה"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />


</androidx.constraintlayout.widget.ConstraintLayout>